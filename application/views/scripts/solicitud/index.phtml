<script type="text/javascript">
 
	   
	   function accion_eliminar(solicitudid)
	   {

				if (!confirm("Desea Eliminar los Datos de la Solicitud?")) 
				{
				
					return false;
				
				} else {
				
							var parametros = {
												"solicitudid" : solicitudid
											};
							
							$.ajax({
											data:  parametros,
											url:   '/Solicitud/eliminarsolicitud', 
											type:  'post', 
											evalscripts : true,
											success:  function (response) { 
											
													$("#formulario").html("<div class='panel-body' id='volver_frame'><a href='/Solicitud'><button type='button' id='volver_bot' class='btn btn-danger'>Volver</button></a><h4 class='alert alert-info' style='line-height:50px;'>"+response+"</h4></div>");
													$('#volver_bot').focus();
									
																
											}
									});
									
				}

 	   }	
 
 	   function carga_editar(solicitudid)
	   {

					var parametros = {
										"solicitudid" : solicitudid
									};
					
					$.ajax({
									data:  parametros,
									url:   '/Solicitud/editarsolicitud', 
									type:  'post', 
									evalscripts : true,
									success:  function (response) { 
									
											$("#formulario").html(response);
														
									}
							});

		}	   



 	   function carga_pagina(pagina,busqueda)
	   {

					var parametros = {
										"pagina" : pagina,
										"busqueda" : busqueda 
									};
					
					$.ajax({
									data:  parametros,
									url:   '/Solicitud/listarsolicitudes', 
									type:  'post', 
									evalscripts : true,
									success:  function (response) { 
									
											$("#formulario").html(response);
														
									}
							});

		}	


		//carga inicial
		carga_pagina('1','PENDIENTE');
</script>
<div id="formulario">
		
</div>						
